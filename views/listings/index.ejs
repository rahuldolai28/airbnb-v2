<% layout('layouts/boilerplate.ejs') %>

<body>
    
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2 row-cols-1 mt-8">
        <% allListings.forEach(function(listing) { %>
        <a href="/listings/<%= listing._id%>" class="listing-link index-card">
            <div class="card col listing-card">
                <img
                    src="<%= listing.image.url %>"
                    class="card-img-top"
                    alt="listing_image..."
                    style="height: 20rem" />

                <div class="card-img-overlay">View Details</div>

                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b>
                        <br />
                        Price: &#8377; <%= listing.price.toLocaleString("en-IN")
                        %> / night
                    </p>
                </div>
            </div>
        </a>
        <% }); %>
    </div>
</body>
